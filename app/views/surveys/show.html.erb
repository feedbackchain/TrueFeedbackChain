<%= simple_form_for @survey do |f| %> 
	 <%= @survey.name %> <br>
		<% @survey.questions.each do |question| %> 
		<%=  question.title %> <br>
		<%  question.options.each do |option| %>
	 	<%= radio_button_tag 'option[id]', option.id %>
	 	<%=  option.otext %> <br>

			<% end %>
	<% end %>

<%= f.submit %> 
 <% end %>

